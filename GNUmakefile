################################################################################
.PHONEY: all clean test

################################################################################
SANDBOX = cabal.sandbox.config
CABAL_FLAGS = "--flags=maintainer"

################################################################################
all: $(SANDBOX)
	cabal install $(CABAL_FLAGS)

################################################################################
test:: all
	cabal install --enable-tests $(CABAL_FLAGS)

################################################################################
clean::
	rm -rf dist

################################################################################
$(SANDBOX):
	cabal sandbox init
